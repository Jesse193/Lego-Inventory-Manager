@model LegoModel

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h3 class="display-4">Lego Part Finder</h3>
    <center>
        <form asp-controller="Home" asp-action="Index">
            <table>
                <tr>
                    <td>Part Number: </td>
                    <td><input type="text" id="partNumber" name="partNumber" /></td>
                   
                    <td><input type="submit" value="Submit" /></td>
                </tr>
            </table>
            <hr />
        </form>
    </center>
    @if (Model != null)
    {
        <table class="table table-bordered table-striped table-sm">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Part Number</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
               
              
                    <tr>
                        <td>@Html.DisplayFor(modelItem => Model.Name)</td>
                        <td>@Html.DisplayFor(modelItem => Model.PartNumber)</td>
                        <td><img src=@Html.DisplayFor(modelItem => Model.Image) alt="Image of Lego Part"/></td>
                    </tr>
               
            </tbody>
        </table>
    }

</div>
