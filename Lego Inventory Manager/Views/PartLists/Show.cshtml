@model PartList

<div>
    <h3 class="display-4">List Details</h3>

    @if (Model != null)
    {
        <table class="table table-bordered table-striped table-sm">
            <thead>
                <tr>
                    <th>List Id</th>
                    <th>List Name</th>
                    <th>Number of Parts in List</th>
                    <th>
                        Delete This List
                        <br />
                        Warning: Deleting This List Will Delete ALL Parts In The List
                    </th>
                </tr>

            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(modelItem => Model.Id)</td>
                    <td>@Html.DisplayFor(modelItem => Model.Name)</td>
                    <td>@Html.DisplayFor(modelItem => Model.NumParts)</td>
                    <td>
                        <form asp-controller="PartLists" asp-action="Delete">
                            <center>
                                <input type="text" id="userToken" name="userToken" placeholder="User Token:" />

                                <input type="hidden" id="listId" name="listId" value="@Model.Id" />

                                <input type="submit" value="Submit" />
                            </center>
                        </form>
                    </td>     
                </tr>
            </tbody>
        </table>
    }
</div>